<div class="row shoppingCartItem" data-id={{_id}}>
    <div class="col-4">
      <div class="shopping-cart-item d-flex aling-items-center h-100 border-bottom pb-2 pt-3">
        <h6 class="shopping-cart-item-name shoppingCartItemName text-truncate ml-3 mb-0">{{email}}</h6>
      </div>
    </div>
    <div class="col-4">
      <div class="shopping-cart-price d-flex aling-items-center h-100 border-bottom pb-2 pt-3">
        <p class="item-price mb-0 shoppingCartItemPrice">{{_id}}</p>
      </div>
    </div>
    <div class="col-2">
      <div class="shopping-cart-price d-flex aling-items-center h-100 border-bottom pb-2 pt-3">
        <p class="item-price mb-0 shoppingCartItemPrice">{{items.length}}</p>
      </div>
    </div>
    <div class="col-2">
      
      <div class="shopping-cart-quantity d-flex justify-content-between align-items-center  h-100 border-bottom pb-2 pt-3">
        <form action="/api/orders/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger buttonDelete" type="submit">X</button>
        </form>
        
      </div>
    </div>
  </div>